modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["libxcrypt"]

[userenv]

[userenv.shared]
API_HOST = "0.0.0.0"
API_PORT = "5000"
LOG_DIR = "./logs"
ENVIRONMENT = "local"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Server"

[[workflows.workflow]]
name = "API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m uvicorn api_gateway.main:app --host 0.0.0.0 --port 5000 --reload"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 44859
externalPort = 3001

[[ports]]
localPort = 45309
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["python", "-m", "uvicorn", "api_gateway.main:app", "--host", "0.0.0.0", "--port", "5000"]
